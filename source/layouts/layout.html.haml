!!! 5
%html
  %head{ prefix: "og: http://ogp.me/ns#" }
    %meta{ charset: "utf-8" }
    = meta_tag "width=device-width, initial-scale=1.0", name: "viewport"
    = meta_tag current_page.data.title || data.site.name, name: "og:title"
    = meta_tag data.site.name, name: "og:site_name"
    = meta_tag "https://secure.gravatar.com/avatar/39ea1010c60a77fc681b38fdbee13556?s=420", name: "og:image"
    = meta_tag "website", name: "og:type"
    %title= current_page.data.title || data.site.name
    = favicon_tag "/images/favicon.png", type: "image/png"
    = stylesheet_link_tag "all.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css"
    /[if lt IE 9]
      = javascript_include_tag "html5shiv-printshiv.js"
    /[if lt IE 8]
      = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome-ie7.min.css"
  %body
    .container
      .row.row-fluid
        .span3.summary
          %h1.text-center Ruby LoCo
          = image_tag "https://secure.gravatar.com/avatar/39ea1010c60a77fc681b38fdbee13556?s=420", id: 'rubyloco-logo'
          %p.callout
            #{data.site.name} is a group of rubyists based out of Loudoun County, Virginia.  We meet on the second Monday and the last Friday of every month.  Come on out and join us!
          .text-center
            = partial "layouts/twitter_button"

        .span7.list-block
          = yield

        .span2
          #sponsors
            %h2 Sponsors

    .navbar-fixed-bottom
      .container
        .footer
          %ul.nav.inline
            %li=link_to "Home", "/"
            %li=link_to "About", "/about"
            %li=link_to "Photos", "/photos"
          %p
            Ruby LoCo -
            Copyright &copy;
            = Time.now.year
            All rights reserved.

    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/2.0.1/jquery.min.js"
    = javascript_include_tag "all.js"
    = google_analytics_tag

    %script#sponsor-template{ type: 'text/x-handlebars-template' }
      %a{href: "{{url}}" }
        %img.sponsor{ src: "{{image_url}}", data: { toggle: "tooltip", placement: "left", html: "true" }, title: "<strong>{{name}}</strong><br>{{info}}" }
